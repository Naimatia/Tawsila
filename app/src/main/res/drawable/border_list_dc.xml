<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border - Top, Bottom, Left, and Right -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <stroke
                android:width="6dp"
                android:color="@android:color/black" />
        </shape>
    </item>

    <!-- Content (Your RecyclerView) - Set padding to create space for the border -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>
